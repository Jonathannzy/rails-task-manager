<h1> My tasks </h1>
<ul style="list-style-type: none;">
<% @tasks.each do |t| %>
<li> <input type="checkbox">
  <%= link_to t.title, task_path(t) %>
  <%= link_to 'delete', task_path(t), method: :delete, data: {confirm: "Delete #{t.title}?" } %>

</li>
<% end %>
</ul>
<%= link_to 'New task', new_task_path %>

